<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0A0A"
    android:orientation="vertical"
    tools:context=".playersName">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:height="100dp"
        android:gravity="center"
        android:text="NOMS DES JOUEURS"
        android:fontFamily="monospace"
        android:textColor="@color/purple_500"
        android:textSize="@dimen/btnSize" />

    <TextView
        android:id="@+id/textView4"
        android:layout_marginTop="15dp"
        android:height="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:textColor="@color/white"
        android:paddingTop="30dp"
        android:textSize="19dp"
        android:text="Entrez le nom du joueur 1 : X" />

    <EditText
        android:id="@+id/joueur1Name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#CCCCCC"
        android:ems="10"
        android:paddingLeft="6dp"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textViewJoueur2"
        android:layout_marginTop="15dp"
        android:height="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:textColor="@color/white"
        android:paddingTop="30dp"
        android:textSize="19dp"
        android:text="Entrez le nom du joueur 2 : 0" />

    <EditText
        android:id="@+id/joueur2Name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#CCCCCC"
        android:paddingLeft="6dp"
        android:ems="10"
        android:inputType="textPersonName" >
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/validerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="JOUER"
            android:textSize="@dimen/btnSize" />
    </LinearLayout>


</LinearLayout>